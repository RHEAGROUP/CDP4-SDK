<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>net45;net451;net452;net46;net461;net462;net47;net471;net472;netstandard1.6;netstandard2.0</TargetFrameworks>
    <Company>RHEA System S.A.</Company>
    <Title>CDP4JsonSerializer Community Edition</Title>
    <VersionPrefix>6.1.0</VersionPrefix>
    <Description>CDP4 JSON Serialization Library</Description>
    <Copyright>Copyright © RHEA System S.A.</Copyright>
    <Authors>Sam, Merlin, Alex, Naron, Alexander, Yevhen, Nathaniel, Kamil</Authors>
    <PackageId>CDP4JsonSerializer-CE</PackageId>
    <PackageRequireLicenseAcceptance>true</PackageRequireLicenseAcceptance>
    <PackageProjectUrl>http://sdk.cdp4.org</PackageProjectUrl>
    <PublishRepositoryUrl>true</PublishRepositoryUrl>
    <PackageIcon>cdp4-icon.png</PackageIcon>
    <IncludeSource>true</IncludeSource>
    <IncludeSymbols>true</IncludeSymbols>
    <RepositoryUrl>https://github.com/RHEAGROUP/CDP4-SDK-Community-Edition.git</RepositoryUrl>
    <PackageTags>CDP CDP4 ECSS-E-TM-10-25 JSON</PackageTags>
    <PackageLicenseExpression>LGPL-3.0-only</PackageLicenseExpression>
    <PackageReleaseNotes>
      [Update] to CDP4Common 6.0.0
      [Update] to Newtonsoft.Json 12.0.3; fixes #77
    </PackageReleaseNotes>
  </PropertyGroup>

  <PropertyGroup>    
    <DocumentationFile>bin\$(Configuration)\$(TargetFramework)\$(AssemblyName).xml</DocumentationFile>    
    <AllowedOutputExtensionsInPackageBuildOutputFolder>$(AllowedOutputExtensionsInPackageBuildOutputFolder);.pdb</AllowedOutputExtensionsInPackageBuildOutputFolder>
  </PropertyGroup>

  <ItemGroup>
    <None Include="..\docs\cdp4-icon.png" Pack="true" PackagePath="\" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\CDP4Common\CDP4Common.csproj" />
  </ItemGroup>
    
  <ItemGroup>
    <PackageReference Include="Newtonsoft.Json" Version="12.0.3" />    
  </ItemGroup>

  <ItemGroup>
    <Folder Include="AutoGenDtoDeserializer\" />
    <Folder Include="AutoGenDtoSerializer\" />
    <Folder Include="Helper\" />
    <Folder Include="JsonConverter\" />
  </ItemGroup>

</Project>